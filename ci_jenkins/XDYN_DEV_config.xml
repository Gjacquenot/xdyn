<?xml version='1.0' encoding='UTF-8'?>
<project>
  <actions/>
  <description>Builds all feature branches currently being developed (in origin/dev/*)</description>
  <keepDependencies>false</keepDependencies>
  <properties/>
  <scm class="hudson.plugins.git.GitSCM" plugin="git@2.3.5">
    <configVersion>2</configVersion>
    <userRemoteConfigs>
      <hudson.plugins.git.UserRemoteConfig>
        <url>ssh://git_simulateur@130.66.124.6/home/git_projets/simulator.git</url>
        <credentialsId>7a140cd6-9bbe-4ab4-9bfd-86444e293412</credentialsId>
      </hudson.plugins.git.UserRemoteConfig>
    </userRemoteConfigs>
    <branches>
      <hudson.plugins.git.BranchSpec>
        <name>origin/dev/*</name>
      </hudson.plugins.git.BranchSpec>
    </branches>
    <doGenerateSubmoduleConfigurations>false</doGenerateSubmoduleConfigurations>
    <submoduleCfg class="list"/>
    <extensions>
      <hudson.plugins.git.extensions.impl.WipeWorkspace/>
    </extensions>
  </scm>
  <canRoam>true</canRoam>
  <disabled>true</disabled>
  <blockBuildWhenDownstreamBuilding>false</blockBuildWhenDownstreamBuilding>
  <blockBuildWhenUpstreamBuilding>false</blockBuildWhenUpstreamBuilding>
  <triggers>
    <hudson.triggers.SCMTrigger>
      <spec>H/30 8-19 * * 1-5</spec>
      <ignorePostCommitHooks>false</ignorePostCommitHooks>
    </hudson.triggers.SCMTrigger>
  </triggers>
  <concurrentBuild>false</concurrentBuild>
  <builders>
    <hudson.tasks.Shell>
      <command>cd /c
sh switch_to_gcc_492.sh || true</command>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command># Retrieve the external dependencies
cd code
./foreach.sh externalDependencies.txt svn_export.sh gj jacqueno</command>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command># Configure
cd code &amp;&amp; mkdir -p build &amp;&amp; cd build &amp;&amp; cmake .. -G &quot;MSYS Makefiles&quot; -DCMAKE_COLOR_MAKEFILE=OFF -DCMAKE_BUILD_TYPE=Release -DBUILD_TESTING=OFF -Wno-dev</command>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command># Compile
cd code/build &amp;&amp; make &amp;&amp; ./run_all_tests.exe --gtest_output=xml:run_all_tests.xml</command>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command># Integration tests
cd code/build &amp;&amp; make integration_tests</command>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command># Doc developer
cd code/build &amp;&amp; make doc_dev</command>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command># Package
cd code/build &amp;&amp; make package</command>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command>#git status &amp;&amp; git branch &amp;&amp; git checkout dev &amp;&amp; git fetch &amp;&amp; git checkout master &amp;&amp; git pull origin master &amp;&amp; git merge dev &amp;&amp; git push -f origin master &amp;&amp; git checkout dev</command>
    </hudson.tasks.Shell>
  </builders>
  <publishers>
    <hudson.tasks.junit.JUnitResultArchiver plugin="junit@1.6">
      <testResults>code/build/run_all_tests.xml</testResults>
      <keepLongStdio>false</keepLongStdio>
      <healthScaleFactor>1.0</healthScaleFactor>
    </hudson.tasks.junit.JUnitResultArchiver>
    <hudson.plugins.doxygen.DoxygenArchiver plugin="doxygen@0.16">
      <doxyfilePath>code/build/Doxyfile</doxyfilePath>
      <keepAll>false</keepAll>
      <folderWhereYouRunDoxygen>code/build</folderWhereYouRunDoxygen>
    </hudson.plugins.doxygen.DoxygenArchiver>
    <hudson.tasks.Mailer plugin="mailer@1.15">
      <recipients>charles-edouard.cady@sirehna.com guillaume.jacquenot@sirehna.com</recipients>
      <dontNotifyEveryUnstableBuild>false</dontNotifyEveryUnstableBuild>
      <sendToIndividuals>false</sendToIndividuals>
    </hudson.tasks.Mailer>
  </publishers>
  <buildWrappers/>
</project>